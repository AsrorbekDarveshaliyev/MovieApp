<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20sp"
        android:fontFamily="@font/merriweather"
        android:textColor="#110E47"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/spiderman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With Spider-Man's identity now revealed, Peter asks Doctor Strange for help. When a spell goes wrong, dangerous foes from other worlds start to appear, forcing Peter to discover what it truly means to be Spider-Man."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/desc"
        android:layout_margin="24dp"
        app:layout_constraintStart_toStartOf="@id/desc"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_margin="24dp"
        android:layout_marginTop="155dp"
        android:fontFamily="@font/merriweather"
        android:text="Cast"
        app:layout_constraintTop_toBottomOf="@id/spiderman"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_see_more"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:text="see more"
        android:textColor="#AAA9B1"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/cast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cast" />

   <ImageView
       android:id="@+id/tom"
       android:layout_width="110dp"
       android:layout_height="110dp"
       android:src="@drawable/salom_tom"
       android:layout_marginTop="15dp"
       app:layout_constraintTop_toBottomOf="@id/cast"
       app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/zendaya"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/salom_zendaya"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toBottomOf="@id/cast"
        app:layout_constraintStart_toStartOf="@id/tom"/>

    <ImageView
        android:id="@+id/jacon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/salom_jacon"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toBottomOf="@id/cast"
        app:layout_constraintStart_toStartOf="@id/zendaya"/>

    <ImageView
        android:id="@+id/benedict"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/salom_benedict"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toBottomOf="@id/cast"
        app:layout_constraintStart_toStartOf="@id/jacon"/>





</androidx.constraintlayout.widget.ConstraintLayout>